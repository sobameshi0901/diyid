.tabWrap
  .tabArea
    %label.tabLabel.active{for: "tab1"} プロフィール
    %label.tabLabel{for: "tab2"} 投稿レシピ
    %label.tabLabel{for: "tab3"} お気に入りレシピ
    %label.tabLabel{for: "tab4"} フォロー
  .panelArea
    #panel1.tabPanel.active
      .userForm
        %h2.formMessage ユーザー情報
        .field.clearfix
          %p.label.imageLabel プロフィール画像：
          =image_tag current_user.avatar.to_s, class: "profileImage"
        .field.clearfix
          %p.label ニックネーム：
          %p.form= current_user.nickname
        .field.clearfix
          %p.label メールアドレス：
          %p.form= current_user.email
        .actions
          =link_to "登録情報の変更", edit_user_registration_path ,class: "button bottomButton"
    #panel2.tabPanel
      .userForm
        %h2.formMessage 投稿レシピ一覧
    #panel3.tabPanel
      .userForm
        %h2.formMessage お気に入りレシピ一覧
    #panel4.tabPanel
      .userForm
        %h2.formMessage フォロー
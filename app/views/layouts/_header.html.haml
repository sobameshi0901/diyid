%header
  =link_to root_path do
    %h1.siteTitle DIYID
    %h2.siteTitle2.siteTitle__sub IYID
    %h3.siteTitle3.siteTitle__sub IYID
    %h4.siteTitle4.siteTitle__sub IYI
    %h3.siteTitle3.siteTitle__sub DIYI
    %h2.siteTitle2.siteTitle__sub DIYI
    %h1.siteTitle DIYID
  .rightContents
    %ul
      -if signed_in?
        %li.flame.flameRed.borderRight
          = link_to "ログアウト", destroy_user_session_path, method: :delete
        %li.flame.flameOrange
          = link_to "マイページ", user_path(current_user)
        %li.flame.flameBlue
          = link_to "レシピを投稿", new_recipe_path
      -else
        %li.flame.flameRed.borderRight
          = link_to "新規登録", new_user_registration_path
        %li.flame.flameBlue
          = link_to "ログイン", new_user_session_path
.globalNav
